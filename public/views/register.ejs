<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head.ejs') %>
        <link rel="stylesheet" href="/css/register.css">
</head>

<body>
    <%- include('partials/navbar.ejs') %>
        <div class="container main-container d-flex flex-column justify-content-center align-items-center">
            <div class="register-form">
                <h1>Register</h1>
                <div class="form-input form-floating mb-3">
                    <input name="username" type="text" class="form-control" id="floatingInput" placeholder="Username">
                    <label for="floatingInput">Username</label>
                </div>
                <div class="form-floating mb-3">
                    <input name="password" type="password" class="form-control" id="floatingPassword"
                        placeholder="Password">
                    <label for="floatingPassword">Password</label>
                </div>
                <div class="form-floating">
                    <input name="password2" type="password" class="form-control" id="floatingPassword2"
                        placeholder="Password">
                    <label for="floatingPassword2">Retype Password</label>
                </div>
                <button onclick="register()" class="button-submit btn btn-primary">Register</button>
                <p>Already have an account? <a href="/login">Login here</a></p>
            </div>
        </div>
        <%- include('partials/footer.ejs') %>
</body>

</html>